<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <%- include('../partials/head-meta') %>
  <!-- Feed specific CSS -->
  <link rel="stylesheet" href="/css/feed.css">
  <!-- JavaScript -->
  <script src="/js/main.js" defer></script>
  <script src="/js/feed.js" defer></script>
</head>
<body>
  <div class="app-container">
    <%- include('../partials/navbar') %>
    
    <div class="content-container">
      <%- include('../partials/messages') %>
      
      <div class="dashboard-header">
        <h1 class="dashboard-title">Meme Feed</h1>
        <% if(typeof currentUser !== 'undefined' && currentUser) { %>
          <a href="/memes/upload" class="btn btn-primary">
            <i class="fas fa-upload"></i> Upload New Meme
          </a>
        <% } else { %>
          <a href="/users/login" class="btn btn-primary">
            <i class="fas fa-sign-in-alt"></i> Login to Upload
          </a>
        <% } %>
      </div>
      
      <!-- Category Navigation Tabs -->
      <div class="category-tabs">
        <a href="/memes/feed" class="category-tab <%= !activeType || activeType === 'all' ? 'active' : '' %>">
          <i class="fas fa-th"></i> All
        </a>
        <a href="/memes/feed/images" class="category-tab <%= activeType === 'image' ? 'active' : '' %>">
          <i class="fas fa-image"></i> Images
        </a>
        <a href="/memes/feed/gifs" class="category-tab <%= activeType === 'gif' ? 'active' : '' %>">
          <i class="fas fa-gif"></i> GIFs
        </a>
        <a href="/memes/feed/reels" class="category-tab <%= activeType === 'video' ? 'active' : '' %>">
          <i class="fas fa-video"></i> Reels
        </a>
      </div>
      
      <!-- Hashtag Filter Bar -->
      <div class="hashtag-filter">
        <div class="hashtag-filter-item active">All</div>
        <% 
        // Extract unique tags from all memes
        let uniqueTags = [];
        if (memes && memes.length > 0) {
          memes.forEach(meme => {
            if (meme.tags && meme.tags.length > 0) {
              meme.tags.forEach(tag => {
                if (!uniqueTags.includes(tag)) {
                  uniqueTags.push(tag);
                }
              });
            }
          });
        }
        %>
        
        <% uniqueTags.forEach(tag => { %>
          <div class="hashtag-filter-item" data-tag="<%= tag %>">#<%= tag %></div>
        <% }); %>
      </div>
      
      <div class="meme-feed" id="meme-feed">
        <% if (memes && memes.length > 0) { %>
          <% memes.forEach(meme => { %>
            <div class="meme-post" data-id="<%= meme._id %>">
              <div class="meme-post-header">
                <div class="meme-post-user">
                  <img src="<%= meme.user.profileImage %>" alt="<%= meme.user.name %>" class="meme-post-user-avatar">
                  <div class="meme-post-user-info">
                    <a href="/users/profile/<%= meme.user._id %>" class="meme-post-username"><%= meme.user.name %></a>
                    <div class="meme-post-time"><%= new Date(meme.createdAt).toLocaleDateString() %></div>
                  </div>
                </div>
                <div class="meme-post-options">
                  <button class="meme-post-options-btn">
                    <i class="fas fa-ellipsis-v"></i>
                  </button>
                  <div class="meme-post-options-menu">
                    <a href="/memes/<%= meme._id %>" class="meme-post-option">
                      <i class="fas fa-external-link-alt"></i> Open in Full View
                    </a>
                    <button class="meme-post-option report-btn" data-id="<%= meme._id %>">
                      <i class="fas fa-flag"></i> Report
                    </button>
                    <% if (currentUser && (currentUser._id == meme.user._id || currentUser.role === 'admin')) { %>
                      <a href="/memes/<%= meme._id %>/edit" class="meme-post-option">
                        <i class="fas fa-edit"></i> Edit
                      </a>
                      <button class="meme-post-option delete-meme-btn" data-id="<%= meme._id %>">
                        <i class="fas fa-trash-alt"></i> Delete
                      </button>
                    <% } %>
                  </div>
                </div>
              </div>
              
              <div class="meme-post-content">
                <div class="meme-post-media">
                  <% if (meme.mediaType === 'video') { %>
                    <video class="meme-post-video" loop muted playsinline>
                      <source src="data:<%= meme.mimeType %>;base64,<%= meme.mediaData %>" type="<%= meme.mimeType %>">
                      Your browser does not support the video tag.
                    </video>
                    <div class="video-autoplay-indicator">
                      <i class="fas fa-play"></i>
                    </div>
                  <% } else { %>
                    <img 
                      src="data:<%= meme.mimeType %>;base64,<%= meme.mediaData %>" 
                      alt="<%= meme.title %>"
                      class="meme-post-image"
                    >
                  <% } %>
                </div>
                
                <!-- Instagram Style Side Actions -->
                <div class="meme-post-side-actions">
                  <button class="meme-post-side-action like-btn <%= meme.likedBy.includes(currentUser?._id) ? 'active' : '' %>" data-id="<%= meme._id %>">
                    <i class="<%= meme.likedBy.includes(currentUser?._id) ? 'fas' : 'far' %> fa-heart"></i>
                    <span class="count"><%= meme.likes %></span>
                  </button>
                  <button class="meme-post-side-action comment-btn" data-id="<%= meme._id %>">
                    <i class="far fa-comment"></i>
                    <span class="count"><%= meme.comments ? meme.comments.length : 0 %></span>
                  </button>
                  <button class="meme-post-side-action share-btn" data-id="<%= meme._id %>" data-title="<%= meme.title %>">
                    <i class="fas fa-share"></i>
                    <span class="count"><%= meme.shares || 0 %></span>
                  </button>
                  <button class="meme-post-side-action save-btn <%= meme.savedBy.includes(currentUser?._id) ? 'active' : '' %>" data-id="<%= meme._id %>">
                    <i class="<%= meme.savedBy.includes(currentUser?._id) ? 'fas' : 'far' %> fa-bookmark"></i>
                  </button>
                </div>
                
                <div class="meme-post-info">
                  <h3 class="meme-post-title"><%= meme.title %></h3>
                  <% if (meme.description) { %>
                    <p class="meme-post-description"><%= meme.description %></p>
                  <% } %>
                  
                  <div class="meme-post-stats">
                    <div class="meme-post-stat">
                      <i class="fas fa-heart"></i> <span class="likes-count"><%= meme.likes %></span> Likes
                    </div>
                    <div class="meme-post-stat">
                      <i class="fas fa-thumbs-down"></i> <span class="dislikes-count"><%= meme.dislikes %></span> Dislikes
                    </div>
                    <div class="meme-post-stat">
                      <i class="fas fa-eye"></i> <span><%= meme.views %></span> Views
                    </div>
                    <div class="meme-post-stat">
                      <i class="fas fa-share-alt"></i> <span class="shares-count"><%= meme.shares %></span> Shares
                    </div>
                  </div>
                  
                  <div class="meme-post-actions">
                    <button class="meme-post-action like-btn <%= meme.likedBy.includes(currentUser?._id) ? 'active' : '' %>" data-id="<%= meme._id %>">
                      <i class="<%= meme.likedBy.includes(currentUser?._id) ? 'fas' : 'far' %> fa-heart"></i> Like
                    </button>
                    <button class="meme-post-action dislike-btn <%= meme.dislikedBy.includes(currentUser?._id) ? 'active' : '' %>" data-id="<%= meme._id %>">
                      <i class="<%= meme.dislikedBy.includes(currentUser?._id) ? 'fas' : 'far' %> fa-thumbs-down"></i> Dislike
                    </button>
                    <button class="meme-post-action save-btn <%= meme.savedBy.includes(currentUser?._id) ? 'active' : '' %>" data-id="<%= meme._id %>">
                      <i class="<%= meme.savedBy.includes(currentUser?._id) ? 'fas' : 'far' %> fa-bookmark"></i> Save
                    </button>
                    <button class="meme-post-action share-btn" data-id="<%= meme._id %>" data-title="<%= meme.title %>">
                      <i class="fas fa-share-alt"></i> Share
                    </button>
                  </div>
                  
                  <% if (meme.tags && meme.tags.length > 0) { %>
                    <div class="meme-post-tags">
                      <% meme.tags.forEach(tag => { %>
                        <a href="/tags/<%= tag %>" class="meme-post-tag">#<%= tag %></a>
                      <% }) %>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
          
          <div class="load-more-container">
            <button id="load-more-btn" class="btn" data-page="2">
              <i class="fas fa-spinner"></i> Load More
            </button>
          </div>
        <% } else { %>
          <div class="empty-state">
            <div class="empty-state-icon">
              <i class="far fa-frown"></i>
            </div>
            <h3>No memes found</h3>
            <p>Be the first to upload a meme in this category!</p>
            <a href="/memes/upload" class="btn btn-primary">
              <i class="fas fa-upload"></i> Upload Meme
            </a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <!-- Report Modal -->
  <div class="modal" id="report-modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Report Meme</h3>
        <button class="close">&times;</button>
      </div>
      <div class="modal-body">
        <form id="report-form">
          <input type="hidden" id="report-meme-id" name="memeId">
          <div class="form-group">
            <label for="report-reason">Reason:</label>
            <select id="report-reason" name="reason" class="form-control" required>
              <option value="" disabled selected>Select a reason</option>
              <option value="inappropriate">Inappropriate Content</option>
              <option value="spam">Spam</option>
              <option value="copyright">Copyright Violation</option>
              <option value="harassment">Harassment</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div class="form-group" id="other-reason-group" style="display: none;">
            <label for="other-reason">Please specify:</label>
            <textarea id="other-reason" name="otherReason" class="form-control" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label for="report-description">Additional details (optional):</label>
            <textarea id="report-description" name="description" class="form-control" rows="3"></textarea>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary close">Cancel</button>
            <button type="submit" class="btn btn-danger">Submit Report</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <!-- Share Modal -->
  <div class="modal" id="share-modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Share Meme</h3>
        <button class="close">&times;</button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="share-link">Share Link:</label>
          <div class="input-group">
            <input type="text" id="share-link" class="form-control" readonly>
            <button id="copy-link-btn" class="btn btn-primary">
              <i class="fas fa-copy"></i> Copy Link
            </button>
          </div>
        </div>
        <div class="share-social">
          <button id="share-twitter" class="btn btn-social btn-twitter">
            <i class="fab fa-twitter"></i> Twitter
          </button>
          <button id="share-facebook" class="btn btn-social btn-facebook">
            <i class="fab fa-facebook-f"></i> Facebook
          </button>
          <button id="share-reddit" class="btn btn-social btn-reddit">
            <i class="fab fa-reddit-alien"></i> Reddit
          </button>
          <button id="share-whatsapp" class="btn btn-social btn-whatsapp">
            <i class="fab fa-whatsapp"></i> WhatsApp
          </button>
        </div>
      </div>
    </div>
  </div>
</body>
</html> 