<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <%- include('./partials/head-meta') %>
</head>
<body>
  <div class="app-container">
    <%- include('./partials/navbar') %>
    
    <div class="content-container">
      <%- include('./partials/messages') %>
      
      <div class="auth-container">
        <div class="auth-card">
          <div class="auth-header">
            <h1 class="auth-title">Admin Login</h1>
            <p class="auth-subtitle">Enter your admin credentials to access the admin dashboard</p>
          </div>
          
          <form action="/users/admin-login" method="POST">
            <div class="form-group">
              <label for="email" class="form-label">Admin Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter your admin email"
                required
              />
              <small class="form-text text-muted">Must end with @admin.meme.com (e.g., yourname@admin.meme.com)</small>
            </div>
            
            <div class="form-group">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Enter your password"
                required
              />
            </div>
            
            <button type="submit" class="btn btn-primary btn-block">
              <i class="fas fa-sign-in-alt"></i> Admin Login
            </button>
          </form>
          
          <div class="auth-footer">
            <p>Not an admin? <a href="/users/login">Regular Login</a></p>
            <p>Need admin access? <a href="/users/register-admin">Register as Admin</a></p>
          </div>
        </div>
      </div>
    </div>
    
    <%- include('./partials/footer') %>
  </div>
</body>
</html> 